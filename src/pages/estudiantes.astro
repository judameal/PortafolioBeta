        gap: 20px;
      }
      
      .student-photo {
        width: 120px;
        height: 120px;
      }
      
      .student-name-card {
        font-size: 1.3rem;
      }
      
      .stats {
        gap: 15px;
      }
      
      .stat-card {
        min-width: 120px;
        padding: 15px;
      }
    }

    @media (max-width: 480px) {
      .students-grid {
        grid-template-columns: 1fr;
      }
      
      .student-photo {
        width: 110px;
        height: 110px;
      }
      
      .student-name-card {
        font-size: 1.2rem;
      }
      
      .student-description {
        font-size: 0.95rem;
      }
    }

    /* ANIMACIONES */
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .hero, .students-grid {
      animation: fadeIn 0.8s ease-out;
    }

    .student-card {
      animation: fadeIn 0.5s ease-out;
      animation-fill-mode: both;
    }

    /* Animaci√≥n escalonada para las cartas */
