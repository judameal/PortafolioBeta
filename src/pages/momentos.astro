---
import Footer from "../../components/footer.astro";
---
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Momentos 游놑</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
  <style>
    :root {
      --primary-blue: #2563eb;
      --light-blue: #3b82f6;
      --dark-blue: #1d4ed8;
      --primary-green: #22c55e;
      --light-green: #4ade80;
      --dark-green: #16a34a;
      --accent-yellow: #eab308;
      --light-yellow: #e7e7e2;
      --light-gray: #f8fafc;
      --medium-gray: #e5e7eb;
      --dark-gray: #64748b;
      --white: #ffffff;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #f0f9ff 0%, #f0fdf4 100%);
      color: #1e293b;
      min-height: 100vh;
      padding: 0;
    }

    /* HEADER */
    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px 40px;
      background: linear-gradient(to right, var(--primary-blue), var(--dark-blue));
      color: white;
      box-shadow: 0 4px 12px rgba(37, 99, 235, 0.15);
      position: sticky;
      top: 0;
      z-index: 100;
    }

    .logo-container {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .logo {
      width: 40px;
      height: 40px;
      background: var(--accent-yellow);
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
      color: var(--dark-blue);
    }

    header h2 {
      margin: 0;
      font-size: 1.5rem;
      font-weight: 700;
      letter-spacing: -0.5px;
    }

    nav a {
      margin-left: 20px;
      text-decoration: none;
      color: white;
      font-weight: 600;
      padding: 8px 16px;
      border-radius: 6px;
      transition: all 0.3s ease;
      position: relative;
    }

    nav a:after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 50%;
      width: 0;
      height: 2px;
      background: var(--accent-yellow);
      transition: all 0.3s ease;
      transform: translateX(-50%);
    }

    nav a:hover {
      background: rgba(255, 255, 255, 0.1);
    }

    nav a:hover:after {
      width: 80%;
    }

    /* HERO SECTION */
    .hero {
      text-align: center;
      padding: 40px 20px 30px;
      max-width: 1200px;
      margin: 0 auto;
    }

    h1 {
      color: var(--dark-blue);
      font-size: 2.8rem;
      margin-bottom: 10px;
      position: relative;
      display: inline-block;
    }

    h1:after {
      content: '';
      position: absolute;
      bottom: -10px;
      left: 50%;
      transform: translateX(-50%);
      width: 120px;
      height: 4px;
      background: var(--primary-green);
      border-radius: 2px;
    }

    .subtitle {
      font-size: 1.2rem;
      color: var(--dark-gray);
      max-width: 700px;
      margin: 20px auto 40px;
      line-height: 1.6;
    }

    /* CONTENEDOR DE MOMENTOS */
    .moments-container {
      max-width: 1100px;
      margin: 0 auto 60px;
      padding: 0 20px;
    }

    /* MOMENTO INDIVIDUAL */
    .moment {
      background: var(--white);
      border-radius: 16px;
      margin-bottom: 40px;
      overflow: hidden;
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
    }

    .moment-header {
      padding: 25px 30px;
      border-bottom: 2px solid var(--medium-gray);
      background: var(--light-gray);
    }

    .moment-title {
      color: var(--dark-blue);
      font-size: 1.8rem;
      font-weight: 700;
      margin: 0;
    }

    .moment-content {
      display: flex;
      min-height: 280px;
    }

    /* CONTENIDO DE FOTO Y DESCRIPCI칍N */
    .moment-photo {
      flex: 1;
      min-width: 300px;
      overflow: hidden;
    }

    .moment-photo img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }

    .moment-description {
      flex: 1;
      padding: 30px;
      display: flex;
      align-items: center;
    }

    .description-text {
      font-size: 1.1rem;
      color: var(--dark-gray);
      line-height: 1.7;
    }

    /* ALTERNAR LADO DE LA FOTO */
    .moment:nth-child(odd) .moment-content {
      flex-direction: row;
    }

    .moment:nth-child(even) .moment-content {
      flex-direction: row-reverse;
    }

    /* FOOTER */
    footer {
      text-align: center;
      padding: 25px;
      background: var(--primary-blue);
      color: white;
      margin-top: 40px;
    }

    footer p {
      margin: 0;
      font-size: 0.95rem;
    }

    .footer-links {
      margin-top: 15px;
    }

    .footer-links a {
      color: var(--light-yellow);
      text-decoration: none;
      margin: 0 10px;
      transition: color 0.3s;
    }

    .footer-links a:hover {
      color: white;
      text-decoration: underline;
    }

    /* RESPONSIVE */
    @media (max-width: 768px) {
      header {
        flex-direction: column;
        padding: 20px;
        gap: 15px;
      }
      
      nav {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 10px;
      }
      
      nav a {
        margin: 0;
      }
      
      h1 {
        font-size: 2.2rem;
      }
      
      .moment-content {
        flex-direction: column !important;
        min-height: auto;
      }
      
      .moment-photo {
        min-width: 100%;
        height: 250px;
      }
      
      .moment-description {
        padding: 25px;
      }
      
      .moment-title {
        font-size: 1.5rem;
      }
      
      .description-text {
        font-size: 1rem;
      }
    }

    @media (max-width: 480px) {
      .moment-header {
        padding: 20px;
      }
      
      .moment-description {
        padding: 20px;
      }
      
      .description-text {
        font-size: 0.95rem;
      }
    }

    /* ANIMACIONES */
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .hero, .moments-container {
      animation: fadeIn 0.8s ease-out;
    }

    .moment {
      animation: fadeIn 0.5s ease-out;
      animation-fill-mode: both;
    }

    .moment:nth-child(1) { animation-delay: 0.1s; }
    .moment:nth-child(2) { animation-delay: 0.2s; }
    .moment:nth-child(3) { animation-delay: 0.3s; }
    .moment:nth-child(4) { animation-delay: 0.4s; }
  </style>
</head>

