  <style>
    :root {
      --primary-blue: #2563eb;
      --light-blue: #3b82f6;
      --dark-blue: #1d4ed8;
      --primary-green: #22c55e;
      --light-green: #4ade80;
      --dark-green: #16a34a;
      --accent-yellow: #eab308;
      --light-yellow: #fef3c7;
      --light-gray: #f8fafc;
      --medium-gray: #e5e7eb;
      --dark-gray: #64748b;
      --white: #ffffff;
    }
    .btn-azul {
  display: inline-block;
  margin: 20px;
  padding: 8px 16px;
  background: #2563eb;
  color: white;
  text-decoration: none;
  border-radius: 4px;
  font-weight: bold;
}
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Arial', sans-serif;
      background-color: var(--light-gray);
      color: #1e293b;
      padding-bottom: 60px;
    }
    /* HERO SECTION */
    .hero {
      text-align: center;
      padding: 50px 20px 40px;
      max-width: 1200px;
      margin: 0 auto;
    }

    h1 {
      color: var(--dark-blue);
      font-size: 2.8rem;
      margin-bottom: 15px;
      position: relative;
      display: inline-block;
    }

    h1:after {
      content: '';
      position: absolute;
      bottom: -10px;
      left: 50%;
      transform: translateX(-50%);
      width: 120px;
      height: 4px;
      background: var(--primary-green);
      border-radius: 2px;
    }

    .subtitle {
      font-size: 1.2rem;
      color: var(--dark-gray);
      max-width: 700px;
      margin: 25px auto 30px;
      line-height: 1.6;
    }
    /* APARICI√ìN SOLO DEL CONTENIDO (NO HEADER) */
.page-content {
  opacity: 0;
  animation: pageFadeIn 0.8s ease-out forwards;
}

@keyframes pageFadeIn {
  from {
    opacity: 0;
    transform: translateY(15px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

    /* HEADER MEJORADO */
    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 25px 40px;
      background: linear-gradient(to right, var(--primary-blue), var(--dark-blue));
      color: white;
      box-shadow: 0 4px 20px rgba(37, 99, 235, 0.2);
      margin-bottom: 60px;
    }
    
    .logo-container {
      display: flex;
      align-items: center;
      gap: 15px;
    }
    
    .logo {
      width: 50px;
      height: 50px;
      background: var(--accent-yellow);
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
      color: var(--dark-blue);
      font-size: 24px;
    }
    
    header h2 {
      margin: 0;
      font-size: 2.2rem;
      font-weight: 800;
      letter-spacing: -0.5px;
    }
    
    /* CONTENEDOR PRINCIPAL */
    .main-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 30px;
    }
    
    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
      gap: 50px;
      margin-top: 40px;
    }
    
    /* CARDS */
    .card {
      background-color: var(--white);
      border-radius: 16px;
      padding: 35px 30px;
      text-align: center;
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
      border-top: 6px solid var(--primary-green);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.12);
    }
    
    .card:nth-child(2) {
      border-top-color: var(--accent-yellow);
    }
    
    .card:nth-child(3) {
      border-top-color: var(--light-blue);
    }

    .card:nth-child(4) {
      border-top-color: var(--primary-green);
    }

    .card:nth-child(5) {
      border-top-color: var(--accent-yellow);
    }

    .card:nth-child(6) {
      border-top-color: var(--light-blue);
    }

    /* CONTENEDORES DE FOTOS CON M√ÅS ESPACIO */
    .photo-container-wrapper {
      position: relative;
      width: 100%;
      height: 320px;
      margin: 30px 0 50px;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    
    .shape-container {
      position: relative;
      width: 300px;
      height: 300px;
    }
    
  
    .photo-item {
      position: absolute;
      z-index: 2;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    
    /* POSICIONES M√ÅS SEPARADAS PARA 2 INTEGRANTES */
    .shape-2 .photo-item:nth-child(1) {
      top: 10%;
      left: 10%;
    }
    
    .shape-2 .photo-item:nth-child(2) {
      bottom: 10%;
      right: 10%;
    }
    /*DE 3*/
    .shape-3 .photo-item:nth-child(1) {
  top: 0;
  left: 0;
  right: 0;
  margin: auto;
}
.shape-3 .photo-item:nth-child(2) {
  bottom: 0;
  left: 0;
}

.shape-3 .photo-item:nth-child(3) {
  bottom: 0;
  right: 0;
}
    
    /* POSICIONES M√ÅS SEPARADAS PARA 4 INTEGRANTES (cuadrado) */
    .shape-4 .photo-item:nth-child(1) {
      top: 0%;
      left: 0%;
    }
    
    .shape-4 .photo-item:nth-child(2) {
      top: 0%;
      right: 0%;
    }
    
    .shape-4 .photo-item:nth-child(3) {
      bottom: 0%;
      left: 0%;
    }
    .shape-4 .photo-item:nth-child(4) {
      bottom: 0%;
      right: 0%;

    }

    /* POSICIONES M√ÅS SEPARADAS PARA 5 INTEGRANTES (pent√°gono) */
    .shape-5 .photo-item:nth-child(1) {
      top: 20%;
      left: 0%;
    }

    .shape-5 .photo-item:nth-child(2) {
      top: 0;
  left: 0;
  right: 0;
  margin: auto;
    }

    .shape-5 .photo-item:nth-child(3) {
      bottom: 0%;
      left: 10%;
    }
    .shape-5 .photo-item:nth-child(4) {
      bottom: 0%;
      right: 10%;
    }
    .shape-5 .photo-item:nth-child(5) {
      top: 20%;
      right: 0%;
    }
      
    .photo-circle {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      overflow: hidden;
      border: 5px solid var(--white);
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
      margin-bottom: 15px;
      background-color: var(--light-gray);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .photo-circle:hover {
      transform: scale(1.05);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    }
    
    .photo-circle img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    /* INTEGRANTES */
    .integrantes {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 15px;
      margin-top: 30px;
      padding-top: 25px;
      border-top: 2px solid var(--medium-gray);
    }
    
    .badge {
      display: inline-block;
      background-color: var(--primary-green);
      color: var(--white);
      padding: 10px 22px;
      border-radius: 25px;
      font-size: 1.1rem;
      font-weight: 700;
      box-shadow: 0 4px 10px rgba(34, 197, 94, 0.3);
    }
    
    .card:nth-child(2) .badge {
      background-color: var(--accent-yellow);
      box-shadow: 0 4px 10px rgba(234, 179, 8, 0.3);
    }
    
    .card:nth-child(3) .badge {
      background-color: var(--light-blue);
      box-shadow: 0 4px 10px rgba(59, 130, 246, 0.3);
    }

    .card:nth-child(4) .badge {
      background-color: var(--primary-green);
      box-shadow: 0 4px 10px rgba(34, 197, 94, 0.3);
    }

    .card:nth-child(5) .badge {
      background-color: var(--accent-yellow);
      box-shadow: 0 4px 10px rgba(234, 179, 8, 0.3);
    }

    .card:nth-child(6) .badge {
      background-color: var(--light-blue);
      box-shadow: 0 4px 10px rgba(59, 130, 246, 0.3);
    } 
    
    /* RESPONSIVE */
    @media (max-width: 1100px) {
      .grid {
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 40px;
      }
    }
    
    @media (max-width: 768px) {
      header {
        padding: 20px 25px;
        margin-bottom: 40px;
      }
      
      header h2 {
        font-size: 1.8rem;
      }
      
      .logo {
